{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "never"],
    "import/no-extraneous-dependencies": [
      "error", {
        "devDependencies": true
      }],
    "import/prefer-default-export": false,
    "import/no-named-as-default": false,
    "react/jsx-one-expression-per-line": false,
    "jsx-a11y/label-has-for": false
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "app": true,
    "td": true,
    "beforeEach": true,
    "request": true,
    "Joi": true,
    "joiAssert": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  }
}